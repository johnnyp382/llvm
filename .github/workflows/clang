name: test
on:
  workflow_dispatch:

defaults:
  run:
    shell: bash

jobs:
  build:
    runs-on: self-hosted
    steps:
      - name: ✅ -march=native
        run: clang -mcpu=apple-a15 -dM -E - </dev/null

      - name: ✅ -arch arm64
        run: clang -arch arm64 -dM -E - </dev/null

      - name: ❌ -mcpu=apple-a15 --target=arm64-apple-ios17.0
        if: ${{ success() || failure() }}
        run: clang -isysroot $(xcrun --sdk iphoneos --show-sdk-path) -march=native --target=arm64-apple-ios16.0 -dM -E - </dev/null

      - name: ❌ -march=native -arch arm64
        if: ${{ success() || failure() }}
        run: clang -march=native -arch arm64 -dM -E - </dev/null

      - uses: actions/checkout@v4
      - name: install requirements
        run: pip3 install -r requirements.txt
      - name: Package
        env:
            GITHUB_USERNAME: ${{ github.actor }}
            GITHUB_TOKEN: ${{ secrets.LLVM_ENV }}
        run: ./package_llvm.py --target-architecture ${{ matrix.target }} ${{ github.event.inputs.version }}
